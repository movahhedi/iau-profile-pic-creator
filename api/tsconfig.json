{
	"compilerOptions": {
		"noImplicitAny": false,
		"target": "es2020",
		"module": "es2020",
		"lib": ["ES2019", "DOM", "DOM.Iterable"],
		"moduleResolution": "node",
		"removeComments": false,
		"preserveConstEnums": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"typeRoots": [
			"./node_modules/@types",
			"./@types"
		]
	},
	"ts-node": {
		"esm": true
	},
	"include": ["*.ts"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
